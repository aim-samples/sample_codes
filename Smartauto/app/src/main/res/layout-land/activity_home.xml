<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/landscapeDrawerWidth">
        <View
            android:layout_width="@dimen/singlePixelSeparator"
            android:layout_height="match_parent"
            android:background="@color/colorSeparator"/>  <!--separator-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/home_screen_frame_layout"
                android:scrollbars="vertical"
                android:layout_weight="1"/>
            <android.support.design.widget.BottomNavigationView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/home_screen_bottom_navigation_view"
                android:layout_gravity="bottom"
                app:menu="@menu/home_bottom_navigation_menu"
                app:itemBackground="@color/colorPrimary"
                app:itemIconTint="@color/bottom_nav_item_colors"
                app:itemTextColor="@color/bottom_nav_item_colors"
                app:itemIconSize="16dp"
                android:elevation="4dp"/>
        </LinearLayout>
        <!--main window view-->
    </android.support.design.widget.CoordinatorLayout>
    <android.support.v4.widget.DrawerLayout
        android:layout_width="@dimen/landscapeDrawerWidth"
        android:layout_height="match_parent"
        android:id="@+id/home_drawer_layout">
        <android.support.design.widget.NavigationView
            android:layout_width="@dimen/landscapeDrawerWidth"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:headerLayout="@layout/home_drawer_header_layout"
            android:id="@+id/home_drawer_navigation_view">
        </android.support.design.widget.NavigationView>                                             <!--drawer-->
    </android.support.v4.widget.DrawerLayout>                                                       <!--drawer layout-->
</FrameLayout>