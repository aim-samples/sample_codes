<Window x:Class="demo_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:demo_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="240"/>
        <TextBox HorizontalAlignment="Center" Margin="0,31,0,0" TextWrapping="Wrap" Text="{Binding Name}" VerticalAlignment="Top" Width="240"/>
        <TextBox HorizontalAlignment="Center" Margin="0,75,0,0" TextWrapping="Wrap" Text="{Binding Age, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="240"/>
        <TextBlock />
        <Button Content="Done" HorizontalAlignment="Center" Margin="0,98,0,0" VerticalAlignment="Top" Width="240" Name="submit"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,54,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="240"/>

    </Grid>
</Window>
