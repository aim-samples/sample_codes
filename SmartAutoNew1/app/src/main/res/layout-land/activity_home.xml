<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/landscapeDrawerWidth">
        <LinearLayout
            android:layout_width="@dimen/Separator"
            android:layout_height="match_parent"
            android:background="@color/matGrey400"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/Separator">
            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/matLightGrey"
                android:title="@string/app_name"
                android:id="@+id/home_activity_frame_layout_toolbar">
            </android.support.v7.widget.Toolbar>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"
                android:layout_weight="1"
                android:id="@+id/home_activity_frame_layout">
            </FrameLayout>
            <android.support.design.widget.BottomNavigationView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/home_activity_bottom_navigation_menu"
                android:layout_gravity="bottom"
                app:menu="@menu/activity_home_bottom_navigation_menu"
                app:itemBackground="@color/colorPrimary"
                app:itemIconTint="@color/bottom_navigation_view_item_colors"
                app:itemTextColor="@color/bottom_navigation_view_item_colors"
                app:itemIconSize="16sp">
            </android.support.design.widget.BottomNavigationView>
        </LinearLayout>
    </android.support.design.widget.CoordinatorLayout>
    <android.support.v4.widget.DrawerLayout
        android:layout_width="@dimen/landscapeDrawerWidth"
        android:layout_height="match_parent"
        android:id="@+id/home_activity_drawer_layout">
        <android.support.design.widget.NavigationView
            android:layout_width="@dimen/landscapeDrawerWidth"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:id="@+id/home_activity_drawer_navigation_menu"
            app:headerLayout="@layout/activity_home_drawer_header_layout">
        </android.support.design.widget.NavigationView>
    </android.support.v4.widget.DrawerLayout>
</FrameLayout>