<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SettingsMainFragment"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="0sp"
        app:cardElevation="0sp"
        android:id="@+id/settings_main_card_wifi"><!--clickable and foreground is required for card ripple effect-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="16sp"
                    android:layout_height="16sp"
                    android:layout_margin="8dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:src="@drawable/ic_wifi_green_24dp"
                    tools:ignore="ContentDescription" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="4dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/demoWifi"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/demoWifiNetwork"
                    android:textSize="10sp"
                    tools:ignore="SmallSp"
                    android:id="@+id/settings_main_card_wifi_status"/>
            </LinearLayout>
            <View
                android:layout_width="@dimen/Separator2px"
                android:layout_height="24sp"
                android:layout_gravity="center_vertical"
                android:background="@color/matGrey400"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="16sp"
                    android:layout_margin="2dp"
                    android:padding="0dp"
                    android:showText="false"
                    android:scaleY="0.8"
                    android:scaleX="0.8"
                    android:layout_gravity="center_horizontal|center_vertical"
                    tools:ignore="ContentDescription"
                    android:id="@+id/settings_main_card_wifi_switch"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="0sp"
        app:cardElevation="0sp"
        android:id="@+id/settings_main_card_bluetooth"><!--clickable and foreground is required for card ripple effect-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="16sp"
                    android:layout_height="16sp"
                    android:layout_margin="8dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:src="@drawable/ic_bluetooth_blue_24dp"
                    tools:ignore="ContentDescription" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="4dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/demoBluetooth"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/demoBluetoothNetwork"
                    android:textSize="10sp"
                    tools:ignore="SmallSp"
                    android:id="@+id/settings_main_card_bluetooth_status"/>
            </LinearLayout>
            <View
                android:layout_width="@dimen/Separator2px"
                android:layout_height="24sp"
                android:layout_gravity="center_vertical"
                android:background="@color/matGrey400"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="16sp"
                    android:layout_margin="2dp"
                    android:padding="0dp"
                    android:showText="false"
                    android:scaleY="0.8"
                    android:scaleX="0.8"
                    android:layout_gravity="center_horizontal|center_vertical"
                    tools:ignore="ContentDescription"
                    android:id="@+id/settings_main_card_bluetooth_switch"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>